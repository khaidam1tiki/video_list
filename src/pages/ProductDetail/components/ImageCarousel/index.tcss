.image-quantity-section {
  position: absolute; 
  bottom: 12px; 
  left: 0; 
  display: flex; 
  justify-content: center; 
  width: 100%;
}

.image-quantity-indicator {
  background-color: rgba(0, 0, 0, 0.4);
  padding: 3px 8px;
  border-radius: 100px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.image-quantity-text {
  font-size: var(--font-size-small);
  font-weight: 500;
  color: var(--white);
  line-height: 150%;
}